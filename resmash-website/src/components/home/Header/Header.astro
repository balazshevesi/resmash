---
import Waves from "./Waves.astro";
import type { Data } from "../../../content/textEnglish"; // Change the path if your Hungarian content is in another file
import { Image } from "astro:assets";
import backgroundImage from "../../../../public/images/background2.webp";

interface Props {
  content: Data;
}
const { content } = Astro.props;
const H2 = () => content.home.header.h2;
---

<section class="h-screen w-full">
  <div class="background absolute top-0 h-full w-full" scroll-speed="0.3"></div>
  <!-- <Image class="absolute bottom-0 top-0" src={backgroundImage} alt="" /> -->
  <div class="mx-auto flex h-full max-w-7xl flex-col justify-center">
    <div class="max-w-2xl p-10 drop-shadow">
      <div
        scroll-speed="-0.15"
        class="text-center text-white drop-shadow md:text-start"
      >
        <h1 class="my-4 text-5xl font-bold sm:text-6xl">
          {content.home.header.h1}
        </h1>
        <p class="my-4 pl-5 text-xl sm:text-2xl">
          <H2 />
        </p>
        <div class="flex justify-center gap-4 pl-5 md:justify-start">
          <button
            onclick="document.querySelector('footer').scrollIntoView({ behavior: 'smooth' })"
            class="btn uppercase active:text-sky-400"
            btn-action="contact"
          >
            {content.home.header.cta1}
          </button>
          <button
            onclick="document.querySelector('.this-is-how-we').scrollIntoView({ behavior: 'smooth' })"
            class="btn uppercase active:text-sky-400"
            btn-action="learn-more"
          >
            {content.home.header.cta2}
          </button>
        </div>
      </div>
    </div>
  </div>
  <Waves />
</section>

<style>
  .background {
    transform: translateZ(-5px);
    position: absolute;
    height: 100%;
    width: 100%;

    /* images/background.jpg */
    background: #3d5a80 url("https://www.resmash.com/images/background2.webp")
      no-repeat center center;
    background-size: cover;
  }
</style>
