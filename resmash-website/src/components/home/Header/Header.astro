---
import Waves from "./Waves.astro";
---

<section class="h-screen w-full">
  <div class="background absolute top-0 h-full w-full" scroll-speed="0.3"></div>
  <div class="mx-auto flex h-full max-w-7xl flex-col justify-center">
    <div class="max-w-2xl p-10 drop-shadow">
      <div
        scroll-speed="-0.15"
        class="text-center text-white drop-shadow md:text-start"
      >
        <h1 class="my-4 text-5xl font-bold sm:text-6xl">
          Join the padel revolution with us!
        </h1>
        <p class="my-4 pl-5 text-xl sm:text-2xl">
          Lead the padel game with a successful court. Our versatile and
          user-friendly courts offer a top-notch playing surface to your
          members. Perfect for clubs, leagues, and tournament organizers.
        </p>
        <div class="flex justify-center gap-4 pl-5 md:justify-start">
          <button
            class="btn uppercase active:text-sky-400"
            btn-action="contact"
          >
            book a call
          </button>
          <button
            class="btn uppercase active:text-sky-400"
            btn-action="learn-more"
          >
            learn more
          </button>
        </div>
      </div>
    </div>
  </div>
  <Waves />
</section>

<style>
  .background {
    transform: translateZ(-5px);
    position: absolute;
    height: 100%;
    width: 100%;

    /* images/background.jpg */
    background: #3d5a80 url("images/background2.webp") no-repeat center center;
    background-size: cover;
  }
</style>
